[mysqld]
# Server identification
server-id = 2

# Binary logging (Failover 대비)
log-bin = mysql-bin
binlog-format = ROW

# GTID (Global Transaction ID)
gtid_strict_mode = ON
log-slave-updates = ON

# Read-only 강제 (Slave는 읽기만)
read-only = ON

# Performance tuning
innodb_flush_log_at_trx_commit = 1
sync_binlog = 1
innodb_buffer_pool_size = 512M
innodb_log_file_size = 128M

# Connection settings
max_connections = 200
wait_timeout = 28800
interactive_timeout = 28800

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# 초기 복제 시 중복 에러 무시 (1062: duplicate key, 1396: operation failed for user)
slave-skip-errors = 1062,1396

# Slow query log
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow-query.log
long_query_time = 2
