[mysqld]
# Server identification
server-id = 2

# Binary logging (Failover 대비)
log-bin = mysql-bin
binlog-format = ROW

# GTID (Global Transaction ID)
gtid_strict_mode = ON
log-slave-updates = ON

# Read-only 강제 (Slave는 읽기만)
read-only = ON

# Performance tuning
innodb_flush_log_at_trx_commit = 1
sync_binlog = 1

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
